+				Namespace: "namespace-1", Name: "cert-1",
+				OwnerReferences: []metav1.OwnerReference{*metav1.NewControllerRef(&networkingv1beta1.Ingress{ObjectMeta: metav1.ObjectMeta{
+					Namespace: "namespace-1", Name: "ingress-2",
+				}}, ingressGVK)},
+			}}},
